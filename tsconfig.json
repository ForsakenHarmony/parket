{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es6", "dom"],
    "outDir": "dist/es",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"]
}
