{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "dom"],
    "outDir": "dist/es",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "parket": ["."],
      "parket/*": ["./*"],
      "preact": ["./node_modules/preact"],
      "react": ["./node_modules/react"]
    }
  },
  "files": ["src/index.ts"],
  "exclude": ["dist/**/*", "parket-react/dist", "preact/dist", "node_modules"]
}
